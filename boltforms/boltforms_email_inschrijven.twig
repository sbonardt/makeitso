        {%- set value = value|json_decode -%}
    {%- endif -%}
    {%- set field = fields[label] -%}
    {%- if field.options.label|default('') is empty -%}
{{ macros.label_value(label, value) }}
    {%- else -%}
        {%- if value is iterable -%}
<p>{{ macros.label(label) -}}
        {%- for val in value -%}
{{ macros.value(val) }}
            {%- endfor -%}
</ul></p>
        {%- else %}
{{ macros.label_value(label, value) }}
        {%- endif -%}
    {%- endif -%}

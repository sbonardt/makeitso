<div class="contentblock {{ contentblock.name }}">
    <div class="layout__inner-wrap grid">
        <div class="grid-column grid-column--two-thirds">

        {% if contentblock.embedded.responsive is not empty %}
            {% if contentblock.title is not empty %}
            <h2>{{ contentblock.title }}</h2>
            {% endif %}
            <div class="video">
                {{ contentblock.embedded.responsive }}
            </div>
        {% endif %}

        </div>
    </div>
</div>